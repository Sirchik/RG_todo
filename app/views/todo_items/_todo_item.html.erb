<% unless todo_item.id.nil? %>
  <% #byebug %>
  <div class="row clearfix <%=' radius-bottom' if todo_item.last? %>" >
    <% if todo_item.completed? %>
      <div class="complete">
        <%= link_to complete_todo_list_todo_item_path(todo_item.todo_list_id, todo_item.id), method: :patch do %>
          <i class='fa fa-check-square-o'></i>
        <% end %>
      </div>
      <div class="todo_item">
        <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
      </div>
      <div class="action_buttons">
        <%= link_to '' do %>
          <i class='fa fa-sort'></i>
        <% end %> | 
        <%= link_to '', class: 'todo_item_edit' do %>
          <i class='fa fa-pencil'></i>
        <% end %> | 
        <%= link_to todo_list_todo_item_path(todo_item.todo_list_id, todo_item.id), method: :delete, data: { confirm: 'Are you sure?'} do %>
          <i class='fa fa-trash'></i>
        <% end %>
      </div>
    <% else %>
      <div class="complete">
        <%= link_to complete_todo_list_todo_item_path(todo_item.todo_list_id, todo_item.id), method: :patch do%>
          <i class='fa fa-square-o'></i>
        <% end %>
      </div>
      <div class="todo_item">
        <p><%= todo_item.content %></p>
      </div>
      <div class="action_buttons">
        <%= link_to '' do %>
          <i class='fa fa-sort'></i>
        <% end %> | 
        <%= link_to '' do %>
          <i class='fa fa-pencil'></i>
        <% end %> | 
        <%= link_to todo_list_todo_item_path(todo_item.todo_list_id, todo_item.id), method: :delete, data: { confirm: 'Are you sure?'} do %>
          <i class='fa fa-trash'></i>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
