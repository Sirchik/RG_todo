<h1>SIMPLE TODO LISTS</h1>
<h2>FROM RUBY GARAGE</h2>

<% @todo_lists.each do |todo_list| %>
  <% # byebug %>
  <div class="container" >
    <!-- <div class="index_row clearfix"> -->
      <!-- <h2 class="todo_list_title"> -->
        <table class="todo_list_title_table">
          <tr>
            <td>
              <i class='fa fa-calendar'></i>
            </td>
            <td class="td_title" id=<%= 'todo_list_' + todo_list.id.to_s %> >
              <%= form_for(todo_list) do |f| %>
                <%= f.label "#{todo_list.title}" %>
                <%= f.text_field :title %>
              <% end %>
            </td>
            <td class="td_right">
              <%= link_to '', class: 'todo_list_edit' do %>
                <i class='fa fa-pencil'></i>
              <% end %> | 
              <%= link_to todo_list_path(todo_list), method: :delete, data: { confirm: 'Are you sure?'} do %>
                <i class='fa fa-trash'></i>
              <% end %>
            </td>
          </tr>
        </table>
      <!-- </h2> -->
      <!-- <p class="todo_list_sub_title"><%= todo_list.description %></p> -->
    <!-- </div> -->
    <div class="todo_items_wrapper" id=<%= 'todo_list_' + todo_list.id.to_s + '_items' %>>
      <div id="form">
        <%= render 'todo_items/form', :todo_list => todo_list%>
      </div>
      <%= render todo_list.todo_items %>
    </div>  
  </div>

<% end %>

<div >
<%= button_to "Add TODO List", todo_lists_path, method: :create, remote: true %>
    <!-- <i class='fa fa-plus fa-2x' id='fa_plus'></i> -->
</div>

